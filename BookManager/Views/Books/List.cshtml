@model BookManager.Models.BookViewModel

<h1>Books</h1>

<hr />
<div class="row">
    <div class="col-md-4">
            
        <a asp-action="Create">Create new Book</a>

        <form asp-action="List">
            @foreach(var book in Model.Books)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Id:</label>
                    <label asp-for="@book.Id" class="control-label">@book.Id</label>
                    <label class="control-label">Name:</label>
                    <label asp-for="@book.Name" class="control-label">@book.Name</label>
                    <a asp-action="details" asp-route-id="@book.Id">Details</a>
                    <a asp-action="delete" asp-route-id="@book.Id">Delete</a>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
